export EDITOR=nvim

# Aliases to match fish config
alias vim='nvim'
alias vi='nvim'

{{ if eq .chezmoi.os "darwin" -}}
# Add Homebrew paths if on macOS
export PATH="/opt/homebrew/bin:/opt/homebrew/sbin:$PATH"
{{ end -}}

# Initialize Starship prompt if available
if command --search starship &>/dev/null; then
  eval "$(starship init bash)"
fi

# Initialize Mise if available
if command --search mise &>/dev/null; then
  eval "$(mise activate bash)"
fi

# Initialize Atuin if available
if command --search atuin &>/dev/null; then
  eval "$(atuin init bash --disable-up-arrow)"
fi

# Initialize zoxide if available
if command --search zoxide &>/dev/null; then
  eval "$(zoxide init bash)"
fi

# Initialize Docker completions if available
if command --search docker &>/dev/null; then
  eval "$(docker completion bash)"
fi

# Initialize rg completions if available
if command --search rg &>/dev/null; then
  eval "$(rg --generate complete-bash)"
fi
